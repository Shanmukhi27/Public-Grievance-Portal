      <th>complaint</th>
      <th>Assigned Officer</th>
      
      <th>Status</th>
     
      <th>View Detailed info</th>
      
    </thead>
  <% for(var i=0;i<sampleData.length;i++){ %>
      <div class="item">
          
            <tbody >
              <tr>
               
                  <form action="/polstatus.html" method="post">
             
              <td><input name="cid"  placeholder="com_id" size="2"  value= " <%= sampleData[i].c_id %>"></td>
              <td><%= sampleData[i].public_id %></td>
              <td><%= sampleData[i].public_name %></td>
             
              <td><%= sampleData[i].complaint %></td>
              <td><%= sampleData[i].asspol_id %></td>
             
              
              <td><%= sampleData[i].status %></td>
              <td><button type="submit">View</button></td>
              
            </form>
            </tr>
            </tbody>
          
      </div>
      <% }  %>

    </table>
     

 </div>

  


  

</body>
</html>


