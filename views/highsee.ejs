</form>
        <form action="/chat.html" method="post">
          <h5>complaint id: <input name="cid" placeholder="com_id" size="2" value="<%= c %>"></h5>
          <div class="one">
            <% if (Data && Data.length) { %>
              <% for (var i = 0; i < Data.length; i++) { %>
                <div class="message-container">
                  <div class="message">
                    <p class="content"><%= Data[i].content %></p>
                    <p class="timestamp"><%= Data[i].timestamp %></p>
                  </div>
                </div>
              <% } %>
            <% } else { %>
              <p>No data found.</p>
            <% } %>
          </div>
          
       
      
